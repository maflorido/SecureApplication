@model SecureApp.Web.Models.Home.LoginViewModel

@{
    ViewBag.Title = "Logon";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.ValidationSummary(false)

    <div class="form-group">
        @Html.LabelFor(x => x.UserName, new { @class = "col-md-2 control-label" })
        <div class="col-md-4">            
            @Html.TextBoxFor(model => model.UserName)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-4">            
            @Html.PasswordFor(model => model.Password)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.RememberMe, new { @class = "col-md-2 control-label" })
        <div class="col-md-4">            
            @Html.CheckBoxFor(model => model.RememberMe)
        </div>
    </div>
    <div class="form-group">
        <button type="submit" id="login-button" class="btn btn-default">Login</button>
    </div>
}

