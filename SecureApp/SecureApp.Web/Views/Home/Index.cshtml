@model SecureApp.Web.Models.Home.LoginViewModel

@{
    ViewBag.Title = "Logon";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        <div class="col-md-4">
            @Html.LabelFor(x => x.UserName)
            @Html.TextBoxFor(model => model.UserName)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-4">
            @Html.LabelFor(x => x.Password)
            @Html.TextBoxFor(model => model.Password)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-4">
            @Html.LabelFor(x => x.RememberMe)
            @Html.CheckBoxFor(model => model.RememberMe)
        </div>
    </div>
    <div class="form-group">
        <button type="submit" id="login-button" class="btn btn-default">Login</button>
    </div>
}

